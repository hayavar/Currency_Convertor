<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.convertor1.HomeActivity">

    <TextView
        android:id="@+id/txtscreen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Welcome to USD to INR  conversion"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtscreen1"
        android:layout_marginEnd="69dp"
        android:text="Enter the amount in Dollars"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/udtoinr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/udre"
        android:layout_alignBottom="@+id/udre"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="11dp"
        android:onClick="udinr1"
        android:text="To INR"
        android:textStyle="bold" />

    <Button
        android:id="@+id/inrtoud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ereu"
        android:layout_alignBottom="@+id/ereu"
        android:layout_alignStart="@+id/udtoinr"
        android:onClick="tousd"
        android:text="TO USD"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtview1"
        android:layout_below="@+id/udtoinr"
        android:layout_marginTop="47dp"
        android:text="Enter the amount in INR"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/udre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/ustxt"
        android:layout_marginTop="54dp"
        android:onClick="udres"
        android:text="RESET"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/ustxt"
        android:layout_marginStart="41dp"
        app:srcCompat="@drawable/rupees" />

    <Button
        android:id="@+id/ereu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usentry"
        android:layout_below="@+id/iustxt"
        android:layout_marginTop="23dp"
        android:onClick="inrusd"
        android:text="RESET"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/usentry"
        android:layout_toStartOf="@+id/txtview1"
        app:srcCompat="@drawable/currency_dollar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iusentry"
        android:layout_toStartOf="@+id/textView5"
        app:srcCompat="@drawable/rupees" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/iustxt"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/currency_dollar" />

    <TextView
        android:id="@+id/ustxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ereu"
        android:layout_below="@+id/usentry"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorActivatedHighlight" />

    <EditText
        android:id="@+id/usentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview1"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView3"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/iusentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inrtoud"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/iustxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/udre"
        android:layout_below="@+id/iusentry"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorActivatedHighlight" />

</RelativeLayout>
